@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
<br>
@using (Html.BeginForm())
{
  <p>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  </p>
  <p>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  </p>
  <p>
  @Html.LabelFor(model => model.Location)
  @Html.TextBoxFor(model => model.Location)
  </p>
  <p>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  </p>

  <input type="submit" value="Add new client" class="btn btn-primary" />
}
<br>
<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index","Home")</p>