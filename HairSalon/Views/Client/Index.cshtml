@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Sylist.Name | </li>
  <ul>
    <li>@client.Description</li>
    <li>@client.Location</li>
  </ul>
}
<br>
<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index","Home")</p>

